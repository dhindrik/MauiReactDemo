             xmlns:local="clr-namespace:Reacting"
             x:Class="Reacting.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <TabBar>
        <ShellContent Title="Webb stuff">
            <ContentPage>
                <BlazorWebView HostPage="wwwroot/index.html">
                    
